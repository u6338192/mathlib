    { rw [edist_dist, ennreal.of_real_lt_of_real_iff Œµ0],
      exact HŒµ } },
  { rcases ennreal.lt_iff_exists_real_btwn.1 Œµ0 with ‚ü®Œµ', _, Œµ0', hŒµ‚ü©,
    rw [ennreal.of_real_pos] at Œµ0',
